{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i> {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i> {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i> {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i> {{ form_label(form.roles) }}
                {{ form_widget(form.roles) }}
            </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}